# The environment
universe       = vanilla
getenv         = True
request_gpus   = 1
request_memory = 14G


# Execution
initialdir = $ENV(PROJECT_DIR)
executable = /bin/bash

# Job
arguments = $(initialdir)/scripts/modeling/run/cuBNM/perturbation/run_perturbation.sh $(dataset) $(sub) $(SeedMW)
log       = $(initialdir)/logs/run_perturbation/$(dataset)_$(sub)_$(SeedMW)_$(Cluster).$(Process).log
output    = $(initialdir)/logs/run_perturbation/$(dataset)_$(sub)_$(SeedMW)_$(Cluster).$(Process).out
error     = $(initialdir)/logs/run_perturbation/$(dataset)_$(sub)_$(SeedMW)_$(Cluster).$(Process).err
Queue